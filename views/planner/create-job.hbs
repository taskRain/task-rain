<aside class="task-create">
  <form action="/planner/create/task" method="post">
    <div class="text-wrapper task">
      <label for="task-name">Task name: </label>
      <input type="text" id="task-name" name="name" placeholder="Name">
      <label for="task-description">Task brief description: </label>
      <textarea id="task-description" name="description" placeholder="Enter a short description ..." cols="40"
        rows="7"></textarea>
      <label for="task-materials">Required material: </label>
      <textarea cols="40" rows="5" id="task-materials" name="materials" placeholder="Materials needed"></textarea>
      <div class="task-low">
        <div>
          <label for="task-duration">Estimated hours: </label>
          <input type="number" id="task-duration" name="duration">
        </div>
        <div>
          <label for="task-operator">Operador asignado: </label>
          <select id="task-operator" name="operator">
            {{#each users}}
            <option value="{{_id}}">{{username}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <a href="/planner/create/job"><button>Cancel</button></a>
    <input type="submit" value="Create Task">
  </form>
</aside>
<section class="job-create">
  <form action="/planner/create/job/{{job._id}}" method="post">
    <div class="text-wrapper">
      <div class="field top">
        <label for="job-description">Job name: </label>
        <input id= "job-description" type="text" name="description" placeholder="name">
      </div>
      <div class="field left">
        <div>
          <label for="job-start-date">Start date:</label>
          <input id="job-start-date" type="date" name="start-date">
        </div>
        <div>
          <label for="job-end-date">End date:</label>
          <input id="job-end-date" type="date" name="end-date">
        </div>
        {{!-- <input type="hidden"> --}}
      </div>
    </div>
    <ul class="task-container">  
    </ul>
    <a id="new-task" href="">Add task</a>
    <div class="form-buttons">
      <a href="/"><button>Cancel</button></a>
      <input type="submit" value="Create Job">
    </div>
  </form>
  <div class="map-wrapper">
    <h1>Imagine a map here</h1>
  </div>
</section>
<script>
  window.jobId = `{{job._id}}`;
</script>
<script src="/javascripts/planner-create.js"></script>